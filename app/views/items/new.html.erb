<%= form_for @item, html: {multipart: true} do |f| %>
  <%= f.file_field :image %>
	<%= f.label :description %>
	<%= f.text_field :description, :required => true %>
	<%= f.label :store %>
	<%= f.select :store,['Zara', 'H&M', 'Topshop'], :required => true %>
  <%= f.label :category %>
  <%= f.select :category,['Jackets and Coats', 'Dresses', 'Shoes'], :required => true %>
	<%= f.label :price %>
	<%= f.number_field :price %>
	<%= f.submit "Add item" %>
<% end %>
